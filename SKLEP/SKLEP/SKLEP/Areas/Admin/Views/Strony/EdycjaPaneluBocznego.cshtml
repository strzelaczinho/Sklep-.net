@model SKLEP.Models.ViewModels.Strony.PanelBocznyVM

@{
    ViewBag.Title = "EdycjaPaneluBocznego";
}

<h2>Edycja Panelu Bocznego</h2>
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2" for="CzyPosiadaPanel">Panel</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Opis, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz Zmiany" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Powrót do Listy", "Index")
</div>

@section Scripts
{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Opis")//id i name textArea
    </script>
}
